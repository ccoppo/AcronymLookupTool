<Window x:Class="AcronymLookup.UI.DefinitionBubble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Definition Lookup"
        Width="160"
        Height="120"
        MinWidth="140"
        MinHeight="100"
        MaxWidth="200"
        MaxHeight="160"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

	<!-- main bubble container -->
	<Border Name="BubbleBorder"
            Background="#F8F9FA"
            BorderBrush="#DEE2E6"
            BorderThickness="1"
            CornerRadius="12">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!--Header Row-->
			<Grid Grid.Row="0" Background="#E9ECEF" Margin ="0,0,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!--drag handle-->
				<Border Grid.Column="0"
						Background="Transparent"
						Cursor="SizeAll"
						MouseLeftButtonDown="DragHandle_MouseLeftButtonDown">
					<TextBlock Text="Lookup"
							   Foreground="#495057"
							   FontSize="10"
							   FontWeight="SemiBold"
							   Margin="8,6,6,6"
							   VerticalAlignment="Center"/>
				</Border>

				<!---close button-->
				<Button Grid.Column="1"
						Name="CloseButton"
						Content="X"
						Width="20"
						Height ="20"
						Margin ="0,4,6,4"
						Background="Transparent"
						BorderThickness="0"
						Foreground="#6C757D"
						FontSize="10"
						FontWeight="Bold"
						Cursor="Hand"
						Click="CloseButton_Click">
					<Button.Style>
						<Style TargetType="Button">
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#DC3545"/>
									<Setter Property="Foreground" Value="White"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>

				</Button>
			</Grid>

			<ScrollViewer Grid.Row="1"
						  VerticalScrollBarVisibility="Auto"
						  HorizontalScrollBarVisibility="Disabled"
						  Margin="6,4,6,4">
				<StackPanel>

					<TextBlock Name="AbbreviationText"
							   Text="API"
							   FontSize="12"
							   FontWeight="Bold"
							   Foreground="#212529"
							   Margin="0,0,0,2"/>

					<!--def display-->
					<TextBlock Name ="DefinitionText"
							   Text="Application Programming Interface"
							   FontSize="10"
							   Foreground="#495057"
							   TextWrapping="Wrap"
							   LineHeight="13"
							   Margin="0,0,0,3"/>
					<!--category display-->
					<TextBlock Name="CategoryText"
							   Text="Category: Software"
							   FontSize="8"
							   Foreground="#6C757D"
							   FontStyle="Italic"
							   Margin="0,0,0,2"
							   Visibility="Collapsed"/>

					<!--notes display-->
					<Border Name="NotesContainer"
							Background="#FFF3CD"
							BorderBrush="#FFEAA7"
							BorderThickness="1"
							CornerRadius="2"
							Padding="4"
							Margin="0,2,0,0"
							Visibility="Collapsed">
						<StackPanel>
							<TextBlock Text="Notes:"
									   FontSize="8"
									   FontWeight="SemiBold"
									   Foreground="#856404"
									   Margin="0,0,0,1"/>
							<TextBlock Name="NotesText"
									   Text="User Notes..."
									   FontSize="8"
									   Foreground="#856404"
									   TextWrapping="Wrap"/>
						</StackPanel>
					</Border>

					<!--not found message-->
					<Border Name="NotFoundContainer"
							Background="#F8D7DA"
							BorderBrush="#F5C6CB"
							BorderThickness="1"
							CornerRadius="4"
							Padding="12"
							Visibility="Collapsed">
						<StackPanel HorizontalAlignment="Center">
							<TextBlock Text="!!! Term Not Found"
									   FontSize ="12"
									   FontWeight="SemiBold"
									   Foreground="#721C24"
									   HorizontalAlignment="Center"
									   Margin="0,0,0,3"/>
							<TextBlock Name="SearchTermText"
									   Text="Searched for: XYZ"
									   FontSize="10"
									   Foreground="#721C24"
									   HorizontalAlignment="Center"
									   Margin="0,0,0,3"/>
							<TextBlock Text="Click + to add this term"
									   FontSize="9"
									   Foreground="#721C24"
									   HorizontalAlignment="Center"/>
						</StackPanel>
					</Border>
				</StackPanel>
			</ScrollViewer>

			<!--footer buttons-->
			<Grid Grid.Row="2"
				  Background="#F8F9FA"
				  Height="26">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!--previous term button-->
				<Button Grid.Column="0"
						Name="PreviousButton"
						Content="&lt;"
						Width="20"
						Height="18"
						Margin="4,4,2,4"
						Background="#6C757D"
						Foreground="White"
						BorderThickness="0"
						FontSize="8"
						Cursor="Hand"
						Click="PreviousButton_Click"
						ToolTip="Previous"
						IsEnabled="False">
					<Button.Style>
						<Style TargetType="Button">
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#5A6268"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter Property ="Background" Value="#ADB5BD"/>
									<Setter Property ="Cursor" Value="Arrow"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!--add term button-->
				<Button Grid.Column="2"
						Name="AddButton"
						Content="+"
						Width="20"
						Height="18"
						Margin="2,4,2,4"
						Background="#28A745"
						Foreground="White"
						BorderThickness="0"
						FontSize="11"
						FontWeight="Bold"
						Cursor="Hand"
						Click="AddButton_Click"
						ToolTip="Add term">
					<Button.Style>
						<Style TargetType="Button">
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#218838"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!--next term button-->
				<Button Grid.Column="4"
						Name="NextButton"
						Content="&gt;"
						Width="20"
						Height="18"
						Margin="2,4,4,4"
						Background="#6C757D"
						Foreground="White"
						BorderThickness="0"
						FontSize="8"
						Cursor="Hand"
						Click="NextButton_Click"
						ToolTip="Next"
						IsEnabled="False">
					<Button.Style>
						<Style TargetType="Button">
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#ADB5BD"/>
									<Setter Property="Cursor" Value="Arrow"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>
			</Grid>
		</Grid>
	</Border>
</Window> 